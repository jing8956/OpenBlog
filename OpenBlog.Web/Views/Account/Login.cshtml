@model LoginViewModel
@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Account" asp-action="Login" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label for="Emial">邮箱</label>
        @Html.TextBoxFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="Password">密码</label>
        @Html.PasswordFor(x => x.Password)
    </div>
    <div class="form-group">
        <label for="IsRemberme">记住我?</label>
        @Html.CheckBoxFor(x => x.IsRemberme, new {@class = "form-control"})
    </div>
    <div class="form-group">
        <label for="IsRemberme">记住时长</label>
        <select asp-for="RemberDays" asp-items="Html.GetEnumDescriptionSelectList<RemeberOptions>()">
            <option selected="selected" value="">Please select</option>
        </select>
    </div>
    <input type="submit" value="Login"/>
</form>